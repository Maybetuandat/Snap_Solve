<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingBottom="16dp">

    <!-- Header with title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/posting_topic_header"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:background="#F8F8F8" />

    <!-- Divider -->
    <View
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:background="@color/selectedicon"
        android:layout_gravity="center_horizontal" />

    <!-- Topic options -->
    <RadioGroup
        android:id="@+id/radioGroupTopics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp">

        <RadioButton
            android:id="@+id/rbTopic1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topic 1"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:layout_marginBottom="8dp"
            android:button="@null"
            android:drawableEnd="?android:attr/listChoiceIndicatorSingle" />

        <RadioButton
            android:id="@+id/rbTopic2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topic 1"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:layout_marginBottom="8dp"
            android:button="@null"
            android:drawableEnd="?android:attr/listChoiceIndicatorSingle" />

        <RadioButton
            android:id="@+id/rbTopic3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topic 1"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:layout_marginBottom="8dp"
            android:button="@null"
            android:drawableEnd="?android:attr/listChoiceIndicatorSingle" />

    </RadioGroup>

    <!-- Select button -->
    <Button
        android:id="@+id/btnSelectTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/posting_select"
        android:textColor="@android:color/white"
        android:background="@drawable/button_rounded_background"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

</LinearLayout>